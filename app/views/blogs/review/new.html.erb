<%= form_with model: [@blog, @review], url: blogs_content_review_index_path(@blog) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p><%= link_to "前に戻る", blogs_content_path(@blog) %></p>