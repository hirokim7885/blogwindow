<div id="wrapper">
<%= render "blogs/shared/header" %>
  <div id="main_container">
  
  <div id="header_local">

    <p><%= link_to 'ユーザー登録管理', users_admin_index_path %></p>
    <p><%= link_to 'レビュー投稿管理', blogs_admin_window_index_path %></p>


    <div id="header_local_image">
      <p><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></p>
    </div>
  </div>
  <div id="header_blog">
    <div id="name">
      <p><%= @user.family_name.to_s.humanize %>さんのブログ</p>
    </div>
    <div id="account">
      <p><%= link_to image_tag("account_circle_white_24dp.png", class:"image_account"), users_admin_path(@user) %></p>
    </div>
  </div>
    <div id="sub_container" >
      <div id="profile">
        <p>
          <% if @user.portrait.attached? %>
          <%= image_tag @user.portrait.variant(resize_to_limit:[200,200]) %>
          <% end %>
        </p>
        <p><%= link_to "プロフィール", users_admin_my_profile_path(@user) %></p>
      </div>
      <div id="blog_container">
        <div id="blog_container_title">
          <p>これまで書いたもの</p>
        </div>
        <div id="blog_new">
          <p><%= link_to '＋', new_blogs_admin_content_path %></p>
        </div>
        <div id="blogs">
          <ul>
          <% @blogs.each do |blog| %>
          <li>
            <%= link_to blog.title, blogs_admin_content_path(blog.id) %><br />
            <div id="time">
              <%= link_to blog.updated_at, blogs_admin_content_path(blog.id) %>
            </div>
            <div id="delete">
              <%= link_to image_tag("delete_outline_black_24dp.png", class:"image_trash"), blogs_admin_content_path(blog.id), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %>
            </div>
          </li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  
  </div>
<%= render "blogs/shared/footer" %>
</div>