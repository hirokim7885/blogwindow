<div id="wrapper_admin_article">

  <div class="blog_background">
    <% if @user.background.attached? %>
    <%= image_tag(@user.background.variant(resize_to_limit:[200,200])) %>
    <% end %>
  </div>

  <div class="container_blog_load">
    <div class="blog_load">

    <div class="container_blog_name">
      <h1 class="blog_name"><%= @user.blog_name %></h1>
        <div class="reviews_admin_content">
          <p class="messages"><%= link_to "メッセージ #{@blog.good_count}件", blogs_admin_article_support_index_path(@blog) %></p>
        </div>
      </div>

      <div class="container_article" >

        <h2 class="title"><%= @blog.title %></h2>
        <div class="content">
          <%= @blog.content %>
        </div>
        <div class="update">最終更新日：<%= @blog.updated_at.strftime("%Y/%m/%d %H:%m 更新") %></div>
        <div class="create">投稿日：<%= @blog.updated_at.strftime("%Y/%m/%d %H:%m 作成") %></div>

        <p class="delete">
          <%= link_to 'この記事を削除する', blogs_admin_article_path(@blog), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %>
        </p>

        <div class="move">
          <% if @blog.previous.present? %>
            <%= link_to "<<前の記事", blogs_admin_article_path(@blog.previous) %>
          <% end %>
            <% if @blog.next.present? %>
          <%= link_to "後の記事>>", blogs_admin_article_path(@blog.next) %>
          <% end %>
        </div>

        <div class="back_to_index"><%= link_to "ブログ一覧に戻る", users_admin_top_path(@blog.user_id) %></div>

        <div class="back_to_top"><%= link_to "Topに戻る", blogs_admin_content_index_path %></div>
      </div>

    </div>
  </div>

</div>
