<div id="wrapper_admin_logininfo">

  <div class="main_container">
    <p class="name">
      <%= "#{@user.family_name} #{@user.given_name}さんのページ" %>
    </p>

    <div class="dummy">
    </div>

    <div id="header_logout">
      <p class="image"><%= link_to image_tag("logout_white_24dp.svg", class:"image_logout"), destroy_user_session_path, method: :delete %></p>
      <p class="chara"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>
    </div>
  </div>

  <div class="sub_container">
    <div class="container_info">
    <p class="info">ユーザー情報</p>


      <p class="basic_logininfo">ログイン情報</p>
      <%= form_with model: @user, url: users_admin_logininfo_path(@user) do |f| %>
        <div class="email">
          <p class="chara">メールアドレス</p>
          <%= f.email_field :email, placeholder: 'メールアドレス' %>
        </div>
          <% if @user.errors.messages[:email].any? %>
            <p class="error"><%= "メールアドレスを入力して下さい。" %></p>
          <% end %>

        <div class="password">
          <p class="chara">パスワード</p>
          <%= f.password_field :password, placeholder: 'パスワード' %>
        </div>
          <% if @user.errors.messages[:password].any? %>
            <p class="error"><%= "パスワードを入力して下さい。" %></p>
          <% end %>

        <div class="submit_logininfo">
          <%= f.submit %>
        </div>
      <% end %>

      <p class="back_to_prev"><%= link_to '前に戻る', users_admin_basicinfo_path(@user) %></p>

      <p class="back_to_top"><%= link_to 'Topに戻る', blogs_admin_content_index_path %></p>

    </div>
  </div>

</div>