<div id="wrapper_admin">

  <div class="main_container">
    <p class="name">
      <%= "管理者（#{current_user.family_name} #{current_user.given_name}）" %>
    </p>

    <div class="dummy">
    </div>
  </div>

  <div class="sub_container">
    <div class="container_info">
      <h2 class="new_user">New User</h2>

      <%= form_with model: @user, url: users_admin_index_path do |f| %>
        <p class="basic_user">基本情報</p>
          <div class="name">
          <p class="chara">氏名</p>
            <%= f.text_field :family_name, placeholder: '名字' %>
            <%= f.text_field :given_name, placeholder: '名前' %>
          </div>
          <div class="name_kana">
          <p class="chara">ふりがな</p>
            <%= f.text_field :family_name_kana, placeholder: 'みょうじ' %>
            <%= f.text_field :given_name_kana, placeholder: 'なまえ' %>
          </div>
          <div class="zipcode">
          <p class="chara">郵便番号</p>
            <%= f.text_field :zipcode, placeholder: '郵便番号' %>
          </div>
          <div class="address">
          <p class="chara">住所</p>
            <%= f.text_field :address, placeholder: '住所' %>
          </div>
          <div class="telephone">
          <p class="chara">電話番号</p>
            <%= f.telephone_field :telephone, placeholder: '電話番号' %>
          </div>
          <div class="admin_flag">
          <p class="chara">管理者フラグ</p>
            <div class="wrap"><%= f.select :admin, [['一般ユーザー', 'user'], ['管理者ユーザー', 'administrator']] %></div>
          </div>
          <div class="suspended">
          <p class="chara">使用停止フラグ</p>
            <div class="wrap"><%= f.select :suspended, [['使用中', 'under_use'], ['使用停止中', 'under_suspension']] %></div>
          </div>

        <p class="basic_logininfo">ログイン情報</p>

            <div class="email">
              <p class="chara">メールアドレス</p>
              <%= f.email_field :email, placeholder: 'メールアドレス' %>
              <% if @user.errors.messages[:email].any? %>
                <p class="error"><%= "メールアドレスを入力して下さい。" %></p>
              <% end %>
              <p class="necessary">必須</p>
            </div>

            <div class="password">
              <p class="chara">パスワード</p>
              <%= f.password_field :password, placeholder: 'パスワード' %>
              <% if @user.errors.messages[:password].any? %>
                <p class="error"><%= "パスワードを入力して下さい。" %></p>
              <% end %>
              <p class="necessary">必須</p>
            </div>

          <div class="submit">
            <%= f.submit %>
          </div>
        <% end %>

        <p class="back_to_prev"><%= link_to '前に戻る', users_admin_index_path(@user) %></p>
    </div>

  </div>

</div>